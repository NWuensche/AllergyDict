<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="niklas.app.allergydictionary">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoperfekt"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllergyListActivity"
            android:label="@string/title_activity_allergy_list"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ResultActivity"
            android:label="@string/title_activity_result_view"></activity>
    </application>

</manifest>
